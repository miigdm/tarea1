<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Season</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Episode.select("series, season").group("series, season").each do |show| %>
      <tr>
        <td><%= show.series %></td>
        <td><%= link_to show.season,  controller: "episodes", action: "index", season_id: show.season, series_id: show.series  %></td>
      </tr>
    <% end %>
  </tbody>
</table>