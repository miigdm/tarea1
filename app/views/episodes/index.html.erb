<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table>
  <thead>
    <tr>

      <th>Title</th>
      <th>Season</th>
      <th>Episode</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>

        <td><%= episode.title %></td>
        <td><%= episode.season %></td>
        <td><%= episode.episode %></td>

        <td><%= link_to 'Show', episode %></td>

      </tr>
    <% end %>
  </tbody>
</table>
