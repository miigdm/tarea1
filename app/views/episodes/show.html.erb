<p id="notice"><%= notice %></p>

<p>
  <strong>Episode Code:</strong>
  <%= @episode.api_id %>
</p>

<p>
  <strong>Title:</strong>
  <%= @episode.title %>
</p>

<p>
  <strong>Season:</strong>
  <%= @episode.season %>
</p>

<p>
  <strong>Episode:</strong>
  <%= @episode.episode %>
</p>

<p>
  <strong>Air date:</strong>
  <%= @episode.air_date %>
</p>

<p>
  <strong>Chracters:</strong>
  <% @episode.characters.each do |character| %>
      <%= link_to character, controller: "characters", action: "index", character_name: character %>
  <% end %>
</p>

<p>
  <strong>Series:</strong>
  <%= @episode.series %>
</p>


